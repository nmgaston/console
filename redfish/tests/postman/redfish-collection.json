{
  "info": {
    "name": "Redfish API Tests",
    "description": "Test collection for DMT Redfish endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "basic",
    "basic": [
      {
        "key": "username",
        "value": "{{admin_username}}",
        "type": "string"
      },
      {
        "key": "password",
        "value": "{{admin_password}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Public Endpoints",
      "item": [
        {
          "name": "Get Service Root",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is JSON', function () {",
                  "    pm.response.to.be.json;",
                  "});",
                  "",
                  "pm.test('Response has @odata properties', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('@odata.context');",
                  "    pm.expect(jsonData).to.have.property('@odata.id');",
                  "    pm.expect(jsonData).to.have.property('@odata.type');",
                  "});",
                  "",
                  "pm.test('Service root has Systems link', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('Systems');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/redfish/v1/",
              "host": ["{{base_url}}"],
              "path": ["redfish", "v1", ""]
            }
          },
          "response": []
        },
        {
          "name": "Get OData Service Document",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is JSON or XML', function () {",
                  "    var contentType = pm.response.headers.get('Content-Type');",
                  "    pm.expect(contentType).to.match(/(application\\/json|application\\/xml)/);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/redfish/v1/$metadata",
              "host": ["{{base_url}}"],
              "path": ["redfish", "v1", "$metadata"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Protected Endpoints (Basic Auth)",
      "item": [
        {
          "name": "Get Systems Collection",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has Members array', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('Members');",
                  "    pm.expect(jsonData.Members).to.be.an('array');",
                  "});",
                  "",
                  "pm.test('Response has Members@odata.count', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('Members@odata.count');",
                  "});",
                  "",
                  "// Save first system ID for subsequent tests",
                  "if (pm.response.json().Members.length > 0) {",
                  "    var firstSystemUrl = pm.response.json().Members[0]['@odata.id'];",
                  "    var systemId = firstSystemUrl.split('/').pop();",
                  "    pm.environment.set('system_id', systemId);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/redfish/v1/Systems",
              "host": ["{{base_url}}"],
              "path": ["redfish", "v1", "Systems"]
            }
          },
          "response": []
        },
        {
          "name": "Get Specific System",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has system properties', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('Id');",
                  "    pm.expect(jsonData).to.have.property('Name');",
                  "    pm.expect(jsonData).to.have.property('SystemType');",
                  "});",
                  "",
                  "pm.test('Response has Status property', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('Status');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/redfish/v1/Systems/{{system_id}}",
              "host": ["{{base_url}}"],
              "path": ["redfish", "v1", "Systems", "{{system_id}}"]
            }
          },
          "response": []
        },
        {
          "name": "Get System - Invalid ID",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 404', function () {",
                  "    pm.response.to.have.status(404);",
                  "});",
                  "",
                  "pm.test('Response contains error message', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('error');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/redfish/v1/Systems/invalid-system-id-12345",
              "host": ["{{base_url}}"],
              "path": ["redfish", "v1", "Systems", "invalid-system-id-12345"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Authentication Tests",
      "item": [
        {
          "name": "Protected Endpoint - No Auth (Should Fail)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 401', function () {",
                  "    pm.response.to.have.status(401);",
                  "});",
                  "",
                  "pm.test('Response contains authentication error', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('error');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/redfish/v1/Systems",
              "host": ["{{base_url}}"],
              "path": ["redfish", "v1", "Systems"]
            }
          },
          "response": []
        },
        {
          "name": "Protected Endpoint - Invalid Auth (Should Fail)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 401', function () {",
                  "    pm.response.to.have.status(401);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "basic",
              "basic": [
                {
                  "key": "username",
                  "value": "invalid_user",
                  "type": "string"
                },
                {
                  "key": "password",
                  "value": "invalid_password",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/redfish/v1/Systems",
              "host": ["{{base_url}}"],
              "path": ["redfish", "v1", "Systems"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Error Handling Tests",
      "item": [
        {
          "name": "Method Not Allowed - POST to Service Root",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 405', function () {",
                  "    pm.response.to.have.status(405);",
                  "});",
                  "",
                  "pm.test('Response contains error message', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('error');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/redfish/v1/",
              "host": ["{{base_url}}"],
              "path": ["redfish", "v1", ""]
            }
          },
          "response": []
        },
        {
          "name": "Invalid Endpoint",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 404', function () {",
                  "    pm.response.to.have.status(404);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/redfish/v1/InvalidEndpoint",
              "host": ["{{base_url}}"],
              "path": ["redfish", "v1", "InvalidEndpoint"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080"
    },
    {
      "key": "admin_username",
      "value": "admin"
    },
    {
      "key": "admin_password",
      "value": "admin"
    },
    {
      "key": "system_id",
      "value": ""
    }
  ]
}
{
  "info": {
    "name": "Redfish API Tests",
    "description": "Test collection for DMT Redfish endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "basic",
    "basic": [
      {
        "key": "username",
        "value": "{{admin_username}}",
        "type": "string"
      },
      {
        "key": "password",
        "value": "{{admin_password}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Public Endpoints",
      "item": [
        {
          "name": "Get Service Root",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is JSON', function () {",
                  "    pm.response.to.be.json;",
                  "});",
                  "",
                  "pm.test('Response has @odata properties', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('@odata.context');",
                  "    pm.expect(jsonData).to.have.property('@odata.id');",
                  "    pm.expect(jsonData).to.have.property('@odata.type');",
                  "});",
                  "",
                  "pm.test('Service root has Systems link', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('Systems');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/redfish/v1/",
              "host": ["{{base_url}}"],
              "path": ["redfish", "v1", ""]
            }
          },
          "response": []
        },
        {
          "name": "Get OData Metadata Document",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Content-Type is application/xml', function () {",
                  "    var contentType = pm.response.headers.get('Content-Type');",
                  "    pm.expect(contentType).to.include('application/xml');",
                  "});",
                  "",
                  "pm.test('OData-Version header is 4.0', function () {",
                  "    var odataVersion = pm.response.headers.get('OData-Version');",
                  "    pm.expect(odataVersion).to.equal('4.0');",
                  "});",
                  "",
                  "pm.test('Response is valid XML', function () {",
                  "    var responseText = pm.response.text();",
                  "    pm.expect(responseText).to.include('<?xml version');",
                  "    pm.expect(responseText).to.include('<edmx:Edmx');",
                  "});",
                  "",
                  "pm.test('XML contains required DMTF namespaces', function () {",
                  "    var responseText = pm.response.text();",
                  "    pm.expect(responseText).to.include('ServiceRoot');",
                  "    pm.expect(responseText).to.include('ComputerSystem');",
                  "    pm.expect(responseText).to.include('Resource');",
                  "});",
                  "",
                  "pm.test('XML has proper EDMX structure', function () {",
                  "    var responseText = pm.response.text();",
                  "    pm.expect(responseText).to.include('edmx:Reference');",
                  "    pm.expect(responseText).to.include('edmx:DataServices');",
                  "    pm.expect(responseText).to.include('http://docs.oasis-open.org/odata/ns/edmx');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/xml"
              }
            ],
            "url": {
              "raw": "{{base_url}}/redfish/v1/$metadata",
              "host": ["{{base_url}}"],
              "path": ["redfish", "v1", "$metadata"]
            }
          },
          "response": []
        },
        {
          "name": "Get Metadata - No Auth Required",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Metadata endpoint is publicly accessible', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('No authentication required', function () {",
                  "    // This test passes if status is 200 without auth",
                  "    pm.expect(pm.response.code).to.equal(200);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/redfish/v1/$metadata",
              "host": ["{{base_url}}"],
              "path": ["redfish", "v1", "$metadata"]
            }
          },
          "response": []
        },
        {
          "name": "Get Metadata - Caching Test",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response body is not empty', function () {",
                  "    pm.expect(pm.response.text().length).to.be.above(0);",
                  "});",
                  "",
                  "// Store response for comparison",
                  "pm.environment.set('metadata_response', pm.response.text());"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/redfish/v1/$metadata",
              "host": ["{{base_url}}"],
              "path": ["redfish", "v1", "$metadata"]
            }
          },
          "response": []
        },
        {
          "name": "Get Metadata - Verify Cached Response",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Cached response matches first request', function () {",
                  "    var firstResponse = pm.environment.get('metadata_response');",
                  "    var currentResponse = pm.response.text();",
                  "    pm.expect(currentResponse).to.equal(firstResponse);",
                  "});",
                  "",
                  "// Clean up",
                  "pm.environment.unset('metadata_response');"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/redfish/v1/$metadata",
              "host": ["{{base_url}}"],
              "path": ["redfish", "v1", "$metadata"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Protected Endpoints (Basic Auth)",
      "item": [
        {
          "name": "Get Systems Collection",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has Members array', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('Members');",
                  "    pm.expect(jsonData.Members).to.be.an('array');",
                  "});",
                  "",
                  "pm.test('Response has Members@odata.count', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('Members@odata.count');",
                  "});",
                  "",
                  "// Save first system ID for subsequent tests",
                  "if (pm.response.json().Members.length > 0) {",
                  "    var firstSystemUrl = pm.response.json().Members[0]['@odata.id'];",
                  "    var systemId = firstSystemUrl.split('/').pop();",
                  "    pm.environment.set('system_id', systemId);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/redfish/v1/Systems",
              "host": ["{{base_url}}"],
              "path": ["redfish", "v1", "Systems"]
            }
          },
          "response": []
        },
        {
          "name": "Get Specific System",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has system properties', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('Id');",
                  "    pm.expect(jsonData).to.have.property('Name');",
                  "    pm.expect(jsonData).to.have.property('SystemType');",
                  "});",
                  "",
                  "pm.test('Response has Status property', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('Status');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/redfish/v1/Systems/{{system_id}}",
              "host": ["{{base_url}}"],
              "path": ["redfish", "v1", "Systems", "{{system_id}}"]
            }
          },
          "response": []
        },
